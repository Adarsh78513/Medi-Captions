<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <style media="screen">
      *,
*:before,
*:after{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
body{
    background-image: url("https://i.pinimg.com/564x/96/c7/fd/96c7fd09a2f27ddfbaa7dee319463a0a.jpg");
    background-size: cover;
}
.background{
    width: 430px;
    height: 520px;
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    top: 50%;
}

.btn {
    /* padding-right: 30px; */
  font-family: 'Poppins',sans-serif;  
  border-radius: 3px;
  background-color: rgba(255,255,255,0.15);
  backdrop-filter: blur(4px);
  color: var(--white, #fff);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-right-color: rgba(255, 255, 255, 0.1);
  border-bottom-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 20px 30px rgb(0 0 0 / 25%);
  height: 30px;
  width: 50px;
  /* float: right; */

}
.btn.btn-default {
  background-color: rgba(255,255,255,0.25);
}
.btn.btn-primary {
  background-color: rgb(0, 123, 255, 50%);
}


img {
  max-width: 100%;
}

main {
  padding: 1.5em !important;
}


.glassheader{
    font-family: 'Poppins',sans-serif;
  color: var(--white, #fff);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  /* box-shadow: 0 0 40px rgba(8,7,16,0.6); */
    padding: 10px 10px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-right-color: rgba(255, 255, 255, 0.1);
  border-bottom-color: rgba(255, 255, 255, 0.1);
  /* box-shadow: 0 20px 30px rgba(0, 0, 0, 0.25); */

  height: 80px;
}
.glass {
    font-family: 'Poppins',sans-serif;
  color: var(--white, #fff);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
  /* box-shadow: 0 0 40px rgba(8,7,16,0.6); */
    padding: 20px 15px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-right-color: rgba(255, 255, 255, 0.1);
  border-bottom-color: rgba(255, 255, 255, 0.1);
  /* box-shadow: 0 20px 30px rgba(0, 0, 0, 0.25); */

  height: auto;
}
.glass.glass__tinted {
  background: rgba(0, 0, 0, 0.4);
}
.glass.glass__clear {
  backdrop-filter: blur(1px);
  -webkit-backdrop-filter: blur(1px);
}
.glass.glass__frosty {
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}
.glassheader.glassheader__frosty {
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

</style>
</head>
<body>
    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>


    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-3 shadow">
    
    </header>
    
    <div class="container-fluid">
      <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 px-0 d-md-block bg-light sidebar collapse">
        
        </nav>
    
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="glassheader glassheader__frosty d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center p-3 mb-3 border-bottom">
            <h1 class="h2">Greetings - <%= result_name.Prefix %> <%= result_name.FamilyName %>!</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary mr-2">Share</button>
                <button type="button" class="btn btn-sm btn-outline-secondary mr-2">Export</button> -->
              <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle " style="position: absolute; right: 1%; bottom: 25%;" onclick="location.href='/logout'">
                
               Logout
              </button>
            </div>
          </div>
    
          <div class="glass glass__frosty p-3">
          <h2>Your Details</h2>
          </div>
          <div class="glass glass__frosty p-3">
            <h3>Patient ID</h3>
            <%= result.PatientID %>
            <P></P> 
            <br>
            <h3>Full Name</h3>
            <%= result_name.FamilyName %> <%= result_name.MiddleName %> <%= result_name.GivenName %>
            <P></P> 
            <br>
            <h3>Gender</h3>
            <%= result.Gender %>
            <br>
            <br>
            <!-- Add Address here -->
            <h3>Address</h3>
            Line: <p><%= result_address.Line %>,</p>
            City: <p><%= result_address.City %>,</p>
            District: <p><%= result_address.District %>,</p>
            PostalCode: <p><%= result_address.PostalCode %>,</p>
            Country: <p><%= result_address.Country %></p>
            <p></p>
            <br>

            <h3>Marital Status</h3>
            <%= result.MaritalStatus %>
            <p></p>
            <br>
            <!-- Add Contact Details here -->
            <h3>Contact Details</h3>
            <%= result_telecom.UsageType %> <%= result_telecom.SystemType %>: <%= result_telecom.Value %>
            <p></p>
            <br>
            <h3>
                Diagnosis
            </h3>
            <h3>Detected Issue</h3>
            <p>Date Detected: <%= detected_issue.DateDetected.getDate() %>-<%= detected_issue.DateDetected.getMonth() %>-<%= detected_issue.DateDetected.getFullYear() %></p>
            <p>Code: <%= detected_issue.Code %></p>
            <p>Severity: <%= detected_issue.Severity %></p>
            <p>Detail: <%= detected_issue.Detail %></p>
            <p>Mitigation: <%= detected_issue.Mitigation %></p>
            <br>
            <h3>Family Member</h3>
            <p>Name: <%= family_history.Name %></p>
            <p>Relationship: <%= family_history.Relationship %></p>
            <p>Gender: <%= family_history.Gender %></p>
            <p>BirthDate: <%= family_history.BornDate.getDate() %>-<%= family_history.BornDate.getMonth() %>-<%= family_history.BornDate.getFullYear() %></p>
            <p>Note: <%= family_history.Note %></p>
            <p>Health note: <%= family_history.ConditionNote %></p>
            <br>



            </div>
        </main>
      </div>
    </div>
    
    
    
          <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE" crossorigin="anonymous"></script><script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha384-zNy6FEbO50N+Cg5wap8IKA4M/ZnLJgzc6w2NqACZaK0u0FXfOWRRJOnQtpZun8ha" crossorigin="anonymous"></script><script src="dashboard.js"></script>

