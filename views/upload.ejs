<!-- views/upload-image.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Image</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            text-align: center;
        }

        h1 {
            color: #333;
        }

        input[type="file"] {
            display: none;
        }

        label {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            display: block; /* Display as block to make it stack vertically */
            margin-bottom: 20px;
        }

        button {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            display: block; /* Display as block to make it stack vertically */
            margin-top: 10px;
        }

        button:hover {
            background-color: #45a049;
        }

        .home-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #333;
            color: white;
            padding: 8px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .home-button:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        <button class="home-button" onclick="location.href='/'">Home</button>
        
        <h1>Upload Image</h1>

        <form action="/process-image" method="post" enctype="multipart/form-data">
            <label for="imageInput">Choose Image</label>
            <input type="file" id="imageInput" name="image" accept="image/*" required>

            <button type="submit" onclick="location.href='/caption'">Next</button>
        </form>
    </div>
</body>
</html>
